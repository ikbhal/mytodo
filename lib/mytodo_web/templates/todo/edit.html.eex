<div class="jumbotron">
	<h1>Edit Todo</h1>
	<form action="<%= todo_path(@conn, :update, @todo.id) %>" method="post">
	  <div class="form-group">
			<label for="todo[name]">Name</label>
			<input type="text" name="todo[name]" class="form-control" value="<%= @todo.name %>" />			
		</div>
		<button type="submit" class="btn btn-primary">Save</button>
	</form>
</div>
